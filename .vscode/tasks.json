{
    "version": "2.0.0",
    "tasks": [
        // 1. 生成 Debug 版的 Makefile (如果不先生成，直接编译就没有 Makefile)
        {
            "label": "CMake Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug", // 指定 Debug 模式，方便调试
                "-S", ".",
                "-B", "build"
            ],
            "group": "build"
        },
        // 2. 执行编译 (依赖上面的生成步骤)
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "-j", "4" // 使用 4 线程并行编译，速度更快
            ],
            "group": {
                "kind": "build",
                "isDefault": true // 设为默认，按 Ctrl+Shift+B 就会执行这个
            },
            "dependsOn": "CMake Configure Debug", // 执行这个任务前，自动先执行 Configure
            "problemMatcher": "$gcc"
        },
        // 3. 清理并重新编译
        {
            "label": "Clean and Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "clean" // 先清理
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Build Project" // 执行这个任务前，自动先执行 Build
        },
        // 4. 等待服务器端口可用（用于客户端启动前）
        {
            "label": "Wait for Server Port",
            "type": "shell",
            "command": "echo '等待服务器端口 8888 可用...' && timeout 100 bash -c 'while ! nc -z localhost 8888 2>/dev/null; do sleep 0.1; done' && echo '服务器端口已就绪！'",
            "problemMatcher": []
        }
    ]
}